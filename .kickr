# Kickr configuration file (https://github.com/kickr-dev/kickr)
# yaml-language-server: $schema=https://raw.githubusercontent.com/kickr-dev/kickr/beta/.schemas/kickr.v1.schema.json
version: 1
ci:
  provider: github
  options:
    - codeql
    - harden-runner
    - ossf-scorecard
  release:
    auth: github-token
    auto: true
  website:
    auto: true
    hosting: netlify
    directory: exampleSite
  renovate:
    auth: personal-token
dependencies:
  manager: renovate
license: mit
maintainers:
  - name: kilianpaquier
platform: github
